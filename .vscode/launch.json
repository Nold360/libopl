    "version": "0.2.0",
    "configurations": [
        {
            "name": "List Games",
            "type": "python",
            "request": "launch",
            "module": "libopl",
            "justMyCode": true,
            "args": ["list", "~/Documents/PS2SMB/"]
        },
        {
            "name": "Delete PES 2013",
            "type": "python",
            "request": "launch",
            "module": "libopl",
            "justMyCode": true,
            "args": ["delete", "~/Documents/PS2SMB/", "SLES_556.66"]
        },
        {
            "name": "Install PES 2013 as ISO",
            "type": "python",
            "request": "launch",
            "module": "libopl",
            "justMyCode": true,
            "args": ["add", "~/Documents/PS2SMB/", "~/PES 2013 Pro Evolution Soccer.iso"]
        },
        {
            "name": "Install Shinobi as ISO, update from storage",
            "type": "python",
            "request": "launch",
            "module": "libopl",
            "justMyCode": true,
            "args": ["add", "-s", "-f", "~/Documents/PS2SMB/", "~/SHINOBI.iso"]
        },
        {
            "name": "Install Shinobi as UL, update from storage",
            "type": "python",
            "request": "launch",
            "module": "libopl",
            "justMyCode": true,
            "args": ["add", "-s", "-f","-ul", "~/Documents/PS2SMB/", "~/SHINOBI.iso"]
        },
        {
            "name": "Install PES 2013 as UL",
            "type": "python",
            "request": "launch",
            "module": "libopl",
            "justMyCode": true,
            "args": ["add", "--ul", "~/Documents/PS2SMB/", "~/PES 2013 Pro Evolution Soccer.iso"]
        },
        {
            "name": "Fix games",
            "type": "python",
            "request": "launch",
            "module": "libopl",
            "justMyCode": true,
            "args": ["fix", "/run/media/edish/USB"]
        },
        {
            "name": "Install Crash Bandicoot in USB",
            "type": "python",
            "request": "launch",
            "module": "libopl",
            "args": ["add", "--ul", "/run/media/edish/USB", "~/Documents/PS2SMB/CD/SLUS_202.38.Crash Bandicoot TWOC.iso"]
        },
        {
            "name": "Init directory structure on USB",
            "type": "python",
            "request": "launch",
            "module": "libopl",
            "args": ["init", "/run/media/edish/USB"]
        },
        {
            "name": "Download all artwork",
            "type": "python",
            "request": "launch",
            "module": "libopl",
            "args": ["artwork", "/home/edish/Documents/PS2SMB"]
        },
        {
            "name": "Rename JAK II to its original name",
            "type": "python",
            "request": "launch",
            "module": "libopl",
            "args": ["storage", "rename", "~/Documents/PS2SMB", "SCUS_972.65"]
        },
        {
            "name": "Rename God Hand to its original name",
            "type": "python",
            "request": "launch",
            "module": "libopl",
            "args": ["rename", "/run/media/edish/USB", "SLUS_215.03", "God Hand"]
        }
    ]
}